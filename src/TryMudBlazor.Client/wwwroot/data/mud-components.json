[
  {
    "component": "MudButton",
    "snippet": [
      "<MudButton OnClick=\"${1:OnClick}\">${2:Text}</MudButton>"
    ]
  },
  {
    "component": "MudTextField",
    "snippet": [
      "<MudTextField @bind-Value=\"${1:Value}\" Label=\"${2:Label}\" Variant=\"${3|Variant.Text,Variant.Filled,Variant.Outlined|}\"/>"
    ]
  },
  {
    "component": "MudAlert",
    "snippet": [
      "<MudAlert Severity=\"${1|Severity.Normal,Severity.Info,Severity.Success,Severity.Warning,Severity.Error|}\">${2:Text}</MudAlert>"
    ]
  },
  {
    "component": "MudSelect",
    "snippet": [
      "<MudSelect @bind-Value=\"${1:Value}\" Label=\"${2:Label}\">${3}</MudSelect>"
    ]
  },
  {
    "component": "MudSelect",
    "option": "with foreach",
    "snippet": [
      "<MudSelect @bind-Value=\"${1:Value}\" Label=\"${2:Label}\">",
      "   @foreach (var item in ${3:List})",
      "   {",
      "     <MudSelectItem Value=\"@item\">@item</MudSelectItem>",
      "   }",
      "</MudSelect>"
    ]
  }
]


